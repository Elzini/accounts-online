{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.ashbal-alnimar.accounts",
  "productName": "Car Showroom Management",
  "copyright": "Copyright Â© 2024 Ashbal Al-Nimar",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*"
  ],
  "extraMetadata": {
    "main": "electron/main.cjs"
  },
  "asar": true,
  "asarUnpack": [
    "node_modules/better-sqlite3/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Portable-${version}.${ext}"
  },
  "mac": {
    "target": ["dmg", "zip"],
    "category": "public.app-category.business"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Office"
  },
  "publish": null
}
